
<div>

  <div class="banner-background">
    <div class="container-banner">
      <h1><%= @cocktail.name %></h1>
    </div>
  </div>

  <div class="background-black">
    <div class="form">
      <%= simple_form_for [@cocktail, @dose] do |f| %>
        <%= f.association :ingredient %>
        <%= f.input :description %>
        <div class="row">
          <%= f.submit "submit here", class: "btn btn-primary m-2" %>
          <%= link_to "back to cocktail info", cocktail_path(@cocktail.id), class: "btn btn-primary m-2" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
